<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Song Page</title>
  </head>
  <body>
    <form action="/songs/<%= @song.slug %>" method="post">
      <input type="hidden" name="_method" value="patch" id="hidden">
      Name: <input type="text" name="Name" id="Name" value="<%= @song.name %>">
      Artist Name: <input type="text" name="artist_name" id="Artist Name" value="<%= @song.artist.name %>">

      <% Genre.all.each do |genre| %>
        <input type="checkbox" name="genres[]" id="<%= genre.name %>" value="<%= genre.id %>" <%= 'checked' if @song.genres.include?(genre) %>><%= genre.name %>
      <% end %>
      <input type="submit" id="Save" value="Save">
    </form>
  </body>
</html>
